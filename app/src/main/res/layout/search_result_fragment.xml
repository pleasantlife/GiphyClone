<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true"
    tools:context=".view.searchresult.SearchResultFragment">

    <ImageView
        android:id="@+id/backBtnImg"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back_white_48dp" />

    <TextView
        android:id="@+id/searchResultTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search"
        android:textColor="@color/white"
        android:textSize="@dimen/titleSize"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/backBtnImg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backBtnImg" />

    <EditText
        android:id="@+id/keywordEditText"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="2dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="Search all the GIFs"
        android:imeOptions="actionSearch"
        android:paddingStart="8dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/searchBtn"
        app:layout_constraintTop_toBottomOf="@+id/backBtnImg" />

    <ImageView
        android:id="@+id/searchBtn"
        android:layout_width="48dp"
        android:layout_height="0dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/search_gradient"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/keywordEditText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/keywordEditText"
        app:srcCompat="@drawable/ic_search_white_48dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/keywordEditText" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recentConstraint"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchBtn">

        <TextView
            android:id="@+id/gifBtn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:background="@color/green"
            android:gravity="center"
            android:text="GIFs"
            android:textColor="#000000"
            android:textSize="16dp"
            app:layout_constraintEnd_toStartOf="@+id/stickerBtn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/stickerBtn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:background="@color/gray"
            android:gravity="center"
            android:text="Stickers"
            android:textColor="#000000"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/gifBtn"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Recent searches"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gifBtn" />

        <HorizontalScrollView
            android:id="@+id/recentScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recentTitle">

            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/recentChipOne"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="game of thrones"
                    app:chipEndPadding="8dp"
                    app:chipIcon="@drawable/ic_restore_white_48dp"
                    app:chipStartPadding="8dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/recentChipTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="pengsoo"
                    app:chipEndPadding="8dp"
                    app:chipIcon="@drawable/ic_restore_white_48dp"
                    app:chipStartPadding="8dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/recentChipThree"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="over the hedge"
                    app:chipEndPadding="8dp"
                    app:chipIcon="@drawable/ic_restore_white_48dp"
                    app:chipStartPadding="8dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/recentChipFour"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="help"
                    app:chipEndPadding="8dp"
                    app:chipIcon="@drawable/ic_restore_white_48dp"
                    app:chipStartPadding="8dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/recentChipFive"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="16dp"
                    android:text="question mark"
                    app:chipEndPadding="8dp"
                    app:chipIcon="@drawable/ic_restore_white_48dp"
                    app:chipStartPadding="8dp" />

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerResult"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:overScrollMode="never"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recentScrollView" />

    </androidx.constraintlayout.widget.ConstraintLayout>




